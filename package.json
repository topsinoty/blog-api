{
  "name": "blog-backend",
  "version": "1.0.0",
  "description": "backend application for blog app.",
  "keywords": [
    "backend",
    "api",
    "blog"
  ],
  "homepage": "https://github.com/topsinoty/blog-api#readme",
  "bugs": {
    "url": "https://github.com/topsinoty/blog-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/topsinoty/blog-api.git"
  },
  "license": "MIT",
  "author": "topsinoty",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "fastify-cli": "^7.4.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.8",
    "c8": "^10.1.2",
    "ts-node": "^10.4.0",
    "concurrently": "^9.0.0",
    "fastify-tsconfig": "^3.0.0",
    "typescript": "~5.9.2"
  }
}